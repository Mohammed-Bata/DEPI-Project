@using MVC.Models.Dtos
@model RegisterationRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="LastName" type="text" class="form-control" placeholder="LastName..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" type="text" class="form-control" placeholder="Email..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password..." />
            </div>
			<div class="col-6 offset-3 pb-2">
				<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password..." />
			</div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Country" type="text" class="form-control" placeholder="Country..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
