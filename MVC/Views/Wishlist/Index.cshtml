@model MVC.Models.Wishlist

@{
    ViewData["Title"] = "Wishlist";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productWishlist in Model.Products)
            {
                <tr>
                    <td>@productWishlist.Product.Name</td>
                    <td>@productWishlist.Product.Price.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromWishlist" method="post">
                            <input type="hidden" name="productId" value="@productWishlist.ProductId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your wishlist is empty.</p>
}
